<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".accountcreation">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="382dp" tools:layout_editor_absoluteX="63dp" android:id="@+id/editText"
            android:hint="Repeat Password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="290dp" tools:layout_editor_absoluteX="63dp" android:id="@+id/editText4"
            android:hint="Password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="199dp" tools:layout_editor_absoluteX="63dp" android:id="@+id/editText2"
            android:hint="Username (cannot include your name)"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="114dp" tools:layout_editor_absoluteX="63dp" android:id="@+id/editText3"
            android:hint="Email Address"/>
    <CheckBox
            android:text="Opt Out to Share Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="737dp"
            tools:layout_editor_absoluteX="111dp" android:id="@+id/checkBox"/>
</android.support.constraint.ConstraintLayout>